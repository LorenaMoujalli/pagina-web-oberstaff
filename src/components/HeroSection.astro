<div class="video-container">
  <div class="video-wrapper">
    <video
      id="video-principal"
      playsinline
      controls
      muted
      poster={previa.src}
      style="width:100%; height:auto; border-radius:16px;"
    >
      <source src={videoPrincipal} type="video/mp4" />
    </video>
  </div>
</div>


<!--desktop -->

<div class="video-desktop-container">
  <div
    class="video-desktop-wrapper"
    style="position: relative; max-width: 500px; margin: auto; border-radius: 16px; overflow: hidden;"
  >
    <video
      id="video-principal-desktop"
      playsinline
      controls
      poster={previa.src}
