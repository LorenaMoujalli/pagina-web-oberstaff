import iconoPapel  from "../assets/icono-papel.png";  
import iconoIgRosa from "../assets/icono-ig-rosa.png"; 
import iconoIgNegro from "../assets/icono-instagram.png"; 
/*import iconoUserRosa  from "../assets/icono-user-rosa.png"; */
