---
export interface Props {
  id: string;
  title: string;
  location?: string;
  type?: string;
  posted?: string;
}

const { id, title, location = 'Remoto', type = 'Full-time', posted = 'Sin fecha' } = Astro.props;
import styles from '../../styles/empleos/JobCard.module.css';
---

<article class={styles.card}>
  <h3 class={styles.title}>{title}</h3>

  <div class={styles.meta}>
    <span class={styles.metaItem}>
      <span class="iconify" data-icon="lucide:laptop" style="font-size:16px;"></span>
      {location}
    </span>

    <span class={styles.metaItem}>
      <span class="iconify" data-icon="lucide:clock" style="font-size:16px;"></span>
      {type}
    </span>

    <span class={styles.metaItem}>
      <span class="iconify" data-icon="lucide:calendar" style="font-size:15px;"></span>
      {posted}
    </span>
  </div>

  <div class={styles.footer}>
    <a href={`/detalle/${id}`} class={styles.link}>Ver detalle â†’</a>
  </div>
</article>
